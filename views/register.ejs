<div class="absolute bg-gray-200 inset-0 min-h-screen z-10"></div>
<div
  class="
    relative
    z-30
    bg-white
    max-w-lg
    mx-auto
    mt-10
    shadow-md
    rounded-md
    overflow-hidden
  "
>
  <div>
    <div class="flex items-end justify-center py-3 text-lg">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        fill="currentColor"
        class="fill-current h-8 w-8"
      >
        <path
          d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z"
        />
      </svg>
      <p class="font-bold text-lg">Register</p>
    </div>
    <div class="px-3 pb-5">
      <div class="flex justify-center text-red-400 text-sm">
        <% if(locals.errors != 'undefined') {%>
        <p><%= errors.passwordMismatch %></p>
        <p><%= errors.passwordLength %></p>

        <% } %>
      </div>
      <form
        action="/users/register"
        method="POST"
        enctype="multipart/form"
        class="space-y-2"
      >
        <div class="flex flex-col space-y-2">
          <label for="name" class="text-base font-semibold">Name</label>
          <input
            type="text"
            name="name"
            class="
              w-full
              focus:outline-none
              ring-2 ring-gray-300
              px-3
              py-2
              rounded-sm
              text-sm text-gray-600
              focus:ring-gray-700
            "
            autocomplete="off"
            required
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name:''%>"
          />
        </div>
        <div class="flex flex-col space-y-2">
          <label for="email" class="text-base font-semibold">Email</label>
          <input
            type="email"
            name="email"
            placeholder="Enter Email"
            class="
              w-full
              focus:outline-none
              ring-2 ring-gray-300
              px-3
              py-2
              rounded-sm
              text-sm text-gray-600
              focus:ring-gray-700
            "
            autocomplete="off"
            required
            value="<%= typeof email != 'undefined' ? email:''%>"
          />
        </div>
        <div class="flex flex-col space-y-2">
          <label for="password" class="text-base font-semibold">Password</label>
          <input
            placeholder="Create Password"
            type="password"
            name="password"
            class="
              w-full
              focus:outline-none
              ring-2 ring-gray-300
              px-3
              py-2
              rounded-sm
              text-sm text-gray-600
              focus:ring-gray-700
            "
            autocomplete="off"
            required
          />
        </div>
        <div class="flex flex-col space-y-2">
          <label for="confirmpassword" class="text-base font-semibold"
            >Confirm Password</label
          >
          <input
            placeholder="Confirm Password"
            type="password"
            name="confirmpassword"
            class="
              w-full
              focus:outline-none
              ring-2 ring-gray-300
              px-3
              py-2
              rounded-sm
              text-sm text-gray-600
              focus:ring-gray-700
            "
            autocomplete="off"
            required
          />
        </div>
        <button
          class="
            mt-3
            w-full
            bg-red-500
            py-1
            rounded-sm
            font-semibold
            text-gray-100
          "
          type="submit"
        >
          Register
        </button>
      </form>

      <div class="mt-3">
        <a class="text-sm tracking-wide font-mono" href="/users/login"
          >Have an Account? <span class="text-red-500">Login Here</span></a
        >
      </div>
    </div>
  </div>
</div>
